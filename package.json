{
	"type": "module",
	"dependencies": {
		"@types/node": "^22.10.5",
		"discord.js": "^14.17.2",
		"dotenv": "^16.4.7",
		"gifencoder": "^2.0.1",
		"prettier": "^3.4.2",
		"sharp": "^0.33.5",
		"typescript": "^5.7.2"
	},
	"prettier": {
		"arrowParens": "avoid",
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"scripts": {
		"start": "bash -c 'deno index.ts &>log & echo $! >pid'",
		"stop": "bash -c 'kill $(<pid)'",
		"fmt": "prettier --log-level=warn --write './**/*.ts'",
		"build": "tsc"
	}
}