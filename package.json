{
	"type": "module",
	"dependencies": {
		"discord.js": "^14.17.2",
		"gifencoder": "^2.0.1",
		"prettier": "^3.4.2",
		"sharp": "^0.33.5",
		"typescript": "^5.7.2"
	},
	"prettier": {
		"arrowParens": "avoid",
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 150,
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"scripts": {
		"start": "bash -c 'node dist/src 2>&1 >log & echo $! >pid'",
		"stop": "bash -c 'kill $(<pid)'",
		"fmt": "prettier --log-level=warn --write './**/*.ts'"
	}
}